@model Blogs.EF.User
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Login - SB Admin</title>
    <link href="~/Areas/Assets/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="bg-primary">

    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            @if (TempData["AlertMessage"] != null)
                            {
                                <div class="alert alert-success pt-3">
                                    <strong> Success! </strong>
                                    @TempData["AlertMessage"]

                                </div>
                            }
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                                <div class="card-body">
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(false, "", new { @class = "text-danger", @style = "list-style-type: none" })

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.UserName)
                                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "UserName", @autoforcus = "autoforcus" })

                                        </div>
                                        <div class="form-group mb-3">
                                            @Html.LabelFor(model => model.Password, new { @class = "mt-3" })
                                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Password", @type = "password" })
                                        </div>

                                        <div class="form-group mb-3">
                                            <div class="g-recaptcha" data-sitekey="6LcoCCogAAAAAC9SB7CzfqNpN0dLU_gWiLgYN_EL"></div>
                                        </div>

                                        <div class="container-fluid">
                                            <div class="row">
                                                <input type="submit" class="btn btn-success btn-block" value="Login" />
                                            </div>
                                        </div>
                                    }
                                </div>
                                <div class="card-footer text-center py-3">
                                    @Html.ActionLink("You need an account? Register", "Register", "Login")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Your Website 2022</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Areas/Assets/js/scripts.js"></script>
    <script src='https://www.google.com/recaptcha/api.js'></script>
</body>
</html>
